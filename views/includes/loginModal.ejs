<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        
        <div class="modal-content rounded-0 border-0 p-4">
            
            <div class="modal-header border-0">
                <h3>Login</h3>
                <button type="button" class="close"  data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% if(errorMessage)  { %>
            <div class="alert alert-danger  mr-3 ml-3 "  role="alert">
                <%= errorMessage%>
            </div>
            <% } %>
            <div class="modal-body">
                <form action="/login" name="userLogin" method="POST" class="row" >
                    <div class="col-12">
                        <input type="text" class="form-control mb-3" id="loginRollNo" name="loginRollNo" placeholder="Roll Number">
                    </div>
                    <div class="col-12">
                        <input type="password" class="form-control mb-3" id="loginPassword" name="loginPassword" placeholder="Password">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">LOGIN</button>
                        <button href="/#loginFacultyModal" id="headLogin" data-toggle="modal" data-dismiss="modal" data-target="#loginFacultyModal" class="btn btn-primary">Faculty Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="loginFacultyModal" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content rounded-0 border-0 p-4">
            <div class="modal-header border-0">
                <h3>Login Faculty</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% if(errorMessage)  { %>
                <div class="alert alert-danger  mr-3 ml-3 " role="alert">
                    <%= errorMessage%>
                </div>
                <% } %>
            <div class="modal-body">
                <form action="/loginFaculty" name="facultyLogin" method="POST" class="row">
                    <div class="col-12">
                        <input type="email" class="form-control mb-3" id="loginEmail" name="loginEmail" placeholder="Email">
                    </div>
                    <div class="col-12">
                        <input type="password" class="form-control mb-3" id="loginPassword" name="loginPassword" placeholder="Password">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">LOGIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
